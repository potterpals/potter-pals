<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/leaveText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="Are you sure you want to delete your account with us?"
        android:textColor="@color/golden"
        android:textSize="24sp" />

    <Button
        android:id="@+id/leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/garnet"
        android:text="LEAVE"
        android:textColor="@color/golden"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_below="@+id/leaveText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/garnet"
        android:text="STAY"
        android:textColor="@color/golden"
        android:layout_alignBaseline="@+id/leave"
        android:layout_alignBottom="@+id/leave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp" />
</RelativeLayout>